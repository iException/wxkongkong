.adbottomview {
    display: flex;
    flex-direction: row;
    width:100%; 
    height:50px; 
    background-color:white;
    align-items: center;
    border-width: 1rpx 0 0 0;
    border-style: solid;
    border-color: #D0D0D0;
}

.adbottomview .imageSize {
    width:30rpx;
    height: 30rpx;
    margin-top: 5rpx;
    margin-bottom: 5rpx;
}

.adbottomview .lineView {
    border-width: 0 1rpx 0 0;
    border-style: solid;
    border-color: #D0D0D0;
}

.adbottomview .button {
    width: 25%;
    height:100%;
    color: #969696; 
    font-size: 12px;
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
}

.adbottomview .applyview {
    width: 50%;
    height:100%; 
    background-color:#10B7F5; 
    color:white;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 19px;
}