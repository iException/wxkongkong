<template name="celebrityuserview">
<view class="celebrityuserview">
    <view style="width:140rpx; height: 140rpx; background-repeat:no-repeat; background-size: 140rpx 140rpx;background-blend-mode: color-dodge;background-image: url('../../resource/images/avatar_placehold.png')">
        <image class="avatar" src="{{avatar}}"></image>
    </view>
    <view class="infoView">
        <view class="nameView">
            <text class="namelbl">{{name}}</text>
            <image wx:if="{{isMark}}" class="markimage" src="../../resource/images/icon_mark.png"></image>
        </view>
        <text class="desclbl">{{identity}}</text>
    </view>
</view>
</template>