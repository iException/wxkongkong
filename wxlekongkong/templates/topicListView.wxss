.topicListView {
    background-color: white;
}

.topicListView .userview {
    display: flex;
    flex-direction: row; 
}

.topicListView .userview .avatarview {
    width: 80rpx; 
    height: 80rpx;
    border-radius: 40rpx;
}

.topicListView .userview .introview {
    height: 80rpx;
    display: flex;
    margin-left: 20rpx;
    flex-direction: column;
    justify-content: center;
}

.topicListView .userview .introview .namelabel {
    color: #333333;
    font-size: 14px;
}

.topicListView .userview .introview .introlabel {
    color: #969696;
    font-size: 12px;
    margin-top: 10rpx;
}

.topicListView .contentview {
    font-size: 14px;
    margin-top: 20rpx;
    font-weight: light;
    width: 100%;    
    word-break: break-all;    
    text-overflow: ellipsis;    
    display: -webkit-box;    
    -webkit-box-orient: vertical;    
    -webkit-line-clamp: 2;    
    overflow: hidden; 
}

.topicListView .imagesview {
    margin-top: 28rpx; 
    white-space: wrap;
    display: flex;
    flex-direction: row;
}

.topicListView .imagesview .imageview {
    clear: both;
}

.topicListView .extroview {
    margin-top: 22rpx;
    display: flex; 
    flex-direction: row;
    align-items: center;
    width: 100%;
}

.topicListView .extroview .leftview {
    margin-right: auto;
}

.topicListView .extroview .rightview {
    margin-right: 20rpx;
}

.topicListView .extroview view image {
    width: 24rpx; 
    height: 24rpx;
}

.topicListView .extroview view text {
    font-size: 12px; 
    margin-left: 14rpx;
    color: #657B86;
}