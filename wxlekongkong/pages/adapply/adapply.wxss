.alertview {
    font-size: 12px;
    color: #cccccc;
    padding: 20rpx 0;
}

.inputview {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    background-color: white;
    border-width: 0 0 1px 0;
    border-style: solid;
    border-color: #cccccc;
    padding: 20rpx 0;
}

.inputtitle {
    width: 20%;
    color: #cccccc;
    font-size: 14px;
    margin-left: 5%;
}

.input {
    width: 65%;
    color: #10b7f5;
    font-size: 14px;
    margin-left: 5%;
}

.inputPlacehold {
    width: 65%;
    font-size: 14px;
    color: lightgray;
    margin-left: 20rpx;
}

.submitview {
    width: 80%;
    height: 70rpx;
    margin-top: 66rpx;
    color: white;
    font-size: 14px;
    background-color: #10b7f5;
    align-items: center;
    justify-content: center;
    display: flex;
    flex-direction: row;
    border-radius: 8rpx;
}
